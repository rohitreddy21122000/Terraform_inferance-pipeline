# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Environment Configuration
environment     = "dev"
project_name    = "pfj-legal-tech-contracts"
s3_bucket_name  = "pfj-legal-tech-contracts-bucket"

# Jira Configuration (use environment variables or secrets manager)
jira_email          = "your-email@example.com"
jira_api_token      = "your-jira-api-token"
jira_webhook_secret = "your-webhook-secret"
jira_base_url       = "https://your-instance.atlassian.net"

# Lambda Layer Configuration
# Option 1: Create new layer (default)
create_lambda_layer = true

# Option 2: Use existing layers
# create_lambda_layer = false
# existing_webhook_layer_arns = [
#   "arn:aws:lambda:us-east-1:021891594383:layer:tech-TextExtract:1"
# ]
# existing_extracttext_layer_arns = [
#   "arn:aws:lambda:us-east-1:021891594383:layer:Tech-TextExtractlayer:2",
#   "arn:aws:lambda:us-east-1:021891594383:layer:Tech-TextExtract:1"
# ]

# Monitoring Configuration
log_retention_days  = 14
enable_xray_tracing = true

# Lambda Configuration
webhook_lambda_timeout       = 90
document_processor_timeout   = 180
webhook_lambda_memory        = 512
document_processor_memory    = 512

# API Gateway Configuration
api_throttle_rate_limit  = 1000
api_throttle_burst_limit = 500
api_enable_detailed_metrics = false